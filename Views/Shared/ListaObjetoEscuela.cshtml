@*
@model List<ObjetoEscuelaBase>
*@

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Id</th>
            <th scope="col">Jornada</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.Nombre</td>
                <td>@obj.Id</td>
                <td>@obj.Jornada</td>
                <td> 
                    <a class="btn btn-primary" asp-route-idCurso="@obj.Id" 
                        asp-controller="Curso" asp-action="EditarCurso">Editar</a>
                    <a class="btn btn-danger" asp-route-idCurso="@obj.Id" 
                       asp-controller="Curso" asp-action="BorrarCurso" >Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>