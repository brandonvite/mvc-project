@model Curso

@{
    ViewData["Title"] = "Editar Curso";
    Layout = "Simple";
}

<h1>@ViewData["Title"]</h1>

<form method="POST" asp-controller="Curso" asp-action="EditarDato">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre"/>
    </div>
    <div>
        <label asp-for="Dirección"></label>
        <input asp-for="Dirección"/>
    </div>
    <div>
        <label asp-for="Jornada"></label>
        @Html.DropDownList(
            "Jornada", Html.GetEnumSelectList<TiposJornada>(),
            "Seleccione una jornada",
            new {@class = "form-control"}
        )
    </div>
    <input type="submit" value="Modificar"/>
</form>

<p>@ViewBag.Fecha</p>
